---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.svelte";
import "@fontsource/geist-mono";
import "@fontsource/ibm-plex-serif";
import "@fontsource/noto-naskh-arabic";
import { ViewTransitions } from "astro:transitions";
import "../index.css";

type Props = {
  title: string;
  description: string;
  url: string;
};

const { title, description, url } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://ekel.dev/opengraph.png" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://ekel.dev/opengraph.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap.xml" />
    <ViewTransitions />
  </head>
  <body class="w-full bg-monochrome-1 text-base-0">
    <div
      class="w-full prose prose-base container mx-auto max-w-3xl px-4 pt-8 prose-gray"
    >
      <main
        class="flex min-h-screen w-full items-start justify-center leading-[1.75] tracking-wide"
      >
        <slot />
      </main>
      <Footer />
    </div>
    <Navbar currentPath={currentPath} client:only="svelte" />
  </body>
</html>
