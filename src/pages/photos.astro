---
import Layout from "@/layouts/Layout.astro";
import { readImages } from "@/lib/utils/readImages";
import { Image } from "astro:assets";

const images = await readImages();
---

<Layout
  title="Photos"
  description="Some of the photos that I've taken. All of the photos are taken by a Sony A5000 Camera and 16-50mm Kit Lens."
  url="https://ekel.dev/photos"
>
  <div
    class:list={[
      "flex w-full flex-col items-start justify-start",
      "md:text-start",
    ]}
  >
    <section class="w-full">
      <h1 data-cy="heading" class="mb-0">Photos</h1>
      <div class="slide-enter-content">
        <p data-cy="description" class="mb-0 text-justify">
          Some of the photos that I've taken. Most of the photos are taken using
          16-50mm Kit Lens, and the rest are using TTArtisan 56mm f/1.8.
        </p>
      </div>
    </section>
    <section
      data-cy="photos-list"
      class="mt-8 grid w-full grid-cols-1 grid-rows-1 gap-4 sm:grid-cols-2 md:grid-cols-3 slide-enter-content"
    >
      {
        images.map((item) => (
          <Image
            width={500}
            height={500}
            quality={100}
            draggable={false}
            format="avif"
            src={item.url}
            alt={item.fileName}
            class="photos !my-0 !rounded-none !border-none object-cover"
          />
        ))
      }
    </section>
  </div>
</Layout>
