---
import type { HeadingNodeTocProps } from "@/types";

type Props = {
  heading: HeadingNodeTocProps;
};

const { heading } = Astro.props;
---

<li class="!list-none">
  <a
    href={`#${heading.slug}`}
    class="!no-underline hover:!underline hover:!text-base-3 text-sm !font-medium line-clamp-1"
  >
    {heading.text}
  </a>
  {
    heading.subheadings && heading.subheadings.length > 0 ? (
      <ul class="!list-none">
        {heading.subheadings.map((sub) => (
          <Astro.self heading={sub} />
        ))}
      </ul>
    ) : null
  }
</li>
