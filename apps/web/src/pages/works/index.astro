---
import Card from "@/components/Card.astro";
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const worksList = await getCollection("works");
---

<Layout
  title="Works"
  description="List some of my works."
  url="https://ekel.dev/works"
  ogImage="https://ekel.dev/og/works.png"
>
  <div
    class:list={[
      "flex w-full flex-col items-start justify-start",
      "md:text-start",
    ]}
  >
    <section class="w-full">
      <h1 data-cy="heading" class="mb-0">./works</h1>
      <div class="slide-enter-content">
        <p data-cy="description" class="mb-0 text-justify">
          List some of my works.
        </p>
      </div>
    </section>
    <section
      data-cy="works-list"
      class="mt-8 grid w-full grid-cols-1 grid-rows-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 slide-enter-content"
    >
      {
        worksList
          .sort((a, b) => a.data.id - b.data.id)
          .map((item) => (
            <Card
              slug={item.slug}
              title={item.data.title}
              description={item.data.description}
              type="works"
              thumbnail={item.data.thumbnail}
              tags={item.data.stack}
            />
          ))
      }
    </section>
  </div>
</Layout>
