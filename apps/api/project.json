{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run cmd/app/development/main.go",
        "cwd": "apps/api"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o dist/api cmd/app/production/main.go",
        "cwd": "apps/api"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/api"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vercel --prod",
        "cwd": "apps/api"
      }
    }
  }
}
